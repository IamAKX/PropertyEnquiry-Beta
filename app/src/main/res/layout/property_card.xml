<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:elevation="4dp"
    android:padding="4dp"
    android:layout_margin="4dp"
    android:layout_gravity="center_horizontal"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent">



    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="330dp"
        android:layout_height="180dp"

        android:id="@+id/property_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#70111111"
        android:textColor="#ffffff"
        android:padding="3dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Possession date"
        android:id="@+id/possession"
        android:layout_marginTop="150dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/property_image"
        android:layout_alignEnd="@+id/property_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/line"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/property_image"
        android:background="#c0c0c0"/>
    <LinearLayout
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_horizontal"
        android:orientation="horizontal"
        android:weightSum="1">
    <LinearLayout
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.28">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/name"
        android:layout_below="@+id/property_image"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Builder"
        android:id="@+id/builder"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/property_image"
        android:layout_alignStart="@+id/property_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address"
        android:id="@+id/address"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/builder"
        android:layout_alignLeft="@+id/property_image"
        android:layout_alignStart="@+id/property_image" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/phone"
                android:layout_marginTop="10dp"
                android:src="@drawable/call"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="103dp"

                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Rs.5lac-10cr"
                android:id="@+id/price"/>
        </LinearLayout>
    </LinearLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2dp"-->
        <!--android:id="@+id/line1"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:layout_marginBottom="5dp"-->
        <!--android:layout_below="@+id/linear_horizontal"-->
        <!--android:background="#c0c0c0"/>-->
</RelativeLayout>

</android.support.v7.widget.CardView>